<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RestaurantFourActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-147dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Tim Hortons\n(1510 Pembina Hwy, Winnipeg, MB)  "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="DisableBaselineAlignment">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables,UselessParent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="215dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="8dp"
                        android:padding="5dp"
                        android:src="@drawable/timhortons2b"
                        tools:ignore="ContentDescription,ImageContrastCheck" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables,UselessParent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="215dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="8dp"
                        android:padding="5dp"
                        android:src="@drawable/timhortons2a"
                        tools:ignore="ContentDescription,ImageContrastCheck" />


                </LinearLayout>



            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Our Accessibility Rating - Good"
                android:textColor="@color/yellow"
                android:textSize="20sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="0dp"
                android:backgroundTint="@color/grey"
                android:numStars="5"
                android:progressTint="@color/yellow"
                android:rating="4"
                android:secondaryProgressTint="@color/grey"
                android:stepSize="1"
                tools:ignore="RtlHardcoded,SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Tim Hortons (1510 Pembina Hwy, Winnipeg, MB)  offers accessible and large entrances, parking spots, and lot. It includes accessible drive throughs, and an online menu, with no stairs present in or out of the building, and the indoor space is accessible. "
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:ignore="HardcodedText,RtlHardcoded,VisualLintLongText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Tim Hortons (1510 Pembina Hwy, Winnipeg, MB) has moderate space inside. "
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:ignore="HardcodedText,RtlHardcoded,VisualLintLongText" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Try These Alternative Accessible Locations!"
                android:textColor="@color/yellow"
                android:textSize="20sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="5dp"
                android:text="Tim Hortons (350 North Town Road #200, Winnipeg, MB)"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:ignore="HardcodedText,RtlHardcoded" />


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>